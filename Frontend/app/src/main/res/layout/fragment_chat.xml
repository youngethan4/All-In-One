<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ethanman04.multiplayer.ChatFragment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/multiplayer_chat_toolbar"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="0dp"
        app:subtitle="Chat with player"
        app:subtitleTextColor="@color/white"
        app:titleMarginStart="50dp"
        android:background="@color/blue"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/multiplayer_chat_rv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/multiplayer_chat_toolbar"
        android:layout_above="@id/multiplayer_chat_ll"
        android:orientation="vertical" />

    <LinearLayout
        android:id="@+id/multiplayer_chat_ll"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        >

        <EditText
            android:id="@+id/multiplayer_chat_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="message"
            android:inputType="textMultiLine" />

        <Button
            android:id="@+id/multiplayer_chat_send"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginBottom="2dp"
            android:layout_marginEnd="2dp"
            android:textAllCaps="false"
            android:background="@drawable/memory_boarder_blue"
            android:text="Send" />

    </LinearLayout>


</RelativeLayout>
